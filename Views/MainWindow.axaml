<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GPU_T.ViewModels"
        xmlns:views="using:GPU_T.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="385" d:DesignHeight="525"
        Width="385" MinWidth="385" MaxWidth="385"
        SizeToContent="{Binding WindowSizeMode}" CanResize="False"    
        WindowStartupLocation="CenterScreen"
        Height="{Binding WindowHeight, Mode=TwoWay}"
        x:Class="GPU_T.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        x:Name="MainWnd"
        Icon="/Assets/app_icon.png"
        Title="GPU-T"
        Background="#f1f1f1">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="*,Auto" Margin="4">
        
        <TabControl Grid.Row="0" SelectedIndex="{Binding SelectedTabIndex}" Margin="0,0,0,2" Padding="2">
            <TabItem Header="Graphics Card">
                <views:GeneralView/>
            </TabItem>
            
            <TabItem Header="Sensors">
                <views:SensorsView/>
            </TabItem>
            
            <TabItem Header="Advanced">
                <views:AdvancedView/>
            </TabItem>
        </TabControl>

        <Grid Grid.Row="1" Margin="10,0,10,0"> 
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> 
                <RowDefinition Height="8"/>    
            </Grid.RowDefinitions>

            <ComboBox Grid.Row="0" Grid.Column="0" 
                      Width="270" 
                      ItemsSource="{Binding AvailableGpus}"
                      SelectedItem="{Binding SelectedGpu}"
                      HorizontalAlignment="Left"
                      Margin="0,0,0,1"/> 
            
            <Button Grid.Row="0" Grid.Column="1" 
                    Content="Close" 
                    Width="75" 
                    HorizontalContentAlignment="Center"
                    Command="{Binding CloseAppCommand}"
                    Margin="0,0,0,1"/>

            <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                    Background="Transparent"
                    Height="8"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Stretch"
                    Cursor="SizeNorthSouth"
                    IsVisible="{Binding ShowResizeGrip}"
                    PointerPressed="ResizeBar_PointerPressed"
                    PointerMoved="ResizeBar_PointerMoved"
                    PointerReleased="ResizeBar_PointerReleased"/>
        </Grid>

    </Grid>
</Window>