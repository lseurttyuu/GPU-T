<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GPU_T.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="385" d:DesignHeight="525"
        Width="385" MinWidth="385" MaxWidth="385"
        SizeToContent="{Binding WindowSizeMode}" CanResize="False"    WindowStartupLocation="CenterScreen"
        Height="{Binding WindowHeight, Mode=TwoWay}"
        x:Class="GPU_T.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        x:Name="MainWnd"
        Icon="/Assets/app_icon.png"
        Title="GPU-T"
        Background="#f1f1f1">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Styles>
        <Style Selector="Window">
            <Setter Property="FontFamily" Value="Segoe UI, Sans-Serif"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <Style Selector="TextBlock.Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
            <Setter Property="Width" Value="74"/>
        </Style>
        
        <Style Selector="TextBlock.InnerLabel">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="8,0,3,0"/>
        </Style>

        <Style Selector="TextBox">
            <Setter Property="MinHeight" Value="18"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Padding" Value="0,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Background" Value="#f1f1f1"/>
            <Setter Property="BorderBrush" Value="#a2a2a2"/>
            <Setter Property="BorderThickness" Value="1,1,0,0"/>
        </Style>

        <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="#f1f1f1"/>
            <Setter Property="BorderBrush" Value="#a2a2a2"/>
            <Setter Property="BorderThickness" Value="1,1,0,0"/>
        </Style>

        <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="#f1f1f1"/>
            <Setter Property="BorderBrush" Value="#a2a2a2"/>
            <Setter Property="BorderThickness" Value="1,1,0,0"/>
        </Style>

        <Style Selector="CheckBox.GpuZ">
            <Setter Property="MinWidth" Value="13"/>
            <Setter Property="MinHeight" Value="13"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="Transparent"/>

            <Setter Property="Template">
                <ControlTemplate>
                    <StackPanel Orientation="Horizontal" Background="Transparent">
                        <Border Name="PART_Border"
                                Width="13" Height="13"
                                Background="#FFFFFF"
                                BorderBrush="#707070"
                                BorderThickness="1"
                                VerticalAlignment="Center">
                            <Path Name="PART_CheckMark"
                                  Data="M 2,6 L 5,9 L 10,2"
                                  Stroke="#333333"
                                  StrokeThickness="1.5"
                                  UseLayoutRounding="False"
                                  IsVisible="False"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Margin="-2,-2,0,0"/>
                        </Border>
                        
                        <ContentPresenter Content="{TemplateBinding Content}"
                                          Margin="5,0,0,0"
                                          VerticalAlignment="Center"
                                          FontSize="11"
                                          Foreground="Black"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter>
        </Style>

        <Style Selector="CheckBox.GpuZ:checked /template/ Path#PART_CheckMark">
            <Setter Property="IsVisible" Value="True"/>
        </Style>

        <Style Selector="CheckBox.GpuZ:disabled /template/ Border#PART_Border">
            <Setter Property="BorderBrush" Value="#A0A0A0"/> 
            <Setter Property="Background" Value="#F5F5F5"/> 
        </Style>

        <Style Selector="CheckBox.GpuZ:pointerover /template/ Border#PART_Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#707070"/>
        </Style>

        <Style Selector="CheckBox.GpuZ:checked:disabled /template/ Path#PART_CheckMark">
            <Setter Property="IsVisible" Value="True"/>
            <Setter Property="Opacity" Value="0.5"/>
            <Setter Property="Stroke" Value="#808080"/> 
        </Style>

        <Style Selector="TextBlock.CheckText">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="3,0,10,0"/> 
            <Setter Property="FontSize" Value="11"/>
        </Style>
        
        <Style Selector="TabItem">
            <Setter Property="FontSize" Value="11"/> 
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="MinHeight" Value="24"/>
            <Setter Property="Padding" Value="6,2"/>
        </Style>

        <Style Selector="Border.SensorFrame">
            <Setter Property="BorderBrush" Value="#a0a0a0"/>
            <Setter Property="BorderThickness" Value="1,1,0,0"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style Selector="Border.SensorFrameInner">
            <Setter Property="BorderBrush" Value="#ffffff"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>

        <Style Selector="TextBlock.SensorName">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="4,0,0,0"/> <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style Selector="TextBlock.SensorValue">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,0,4,0"/> <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

<Style Selector="TextBlock.ModeLabel">
            <Setter Property="FontSize" Value="6"/>
            <Setter Property="Foreground" Value="#008000"/> <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="2,0,0,0"/> </Style>

        <Style Selector="Button.ResetBtn">
            <Setter Property="Padding" Value="0,0,0,2"/> <Setter Property="Margin" Value="0"/>
            <Setter Property="MinHeight" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

    </Window.Styles>

    <Grid RowDefinitions="*,Auto" Margin="4">
        
        <TabControl Grid.Row="0" SelectedIndex="{Binding SelectedTabIndex}" Margin="0,0,0,2" Padding="2">
            <TabItem Header="Graphics Card">
                
                <Grid Margin="0,5,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="24"/> 
                        <RowDefinition Height="24"/> 
                        <RowDefinition Height="24"/> 
                        <RowDefinition Height="24"/> 
                        <RowDefinition Height="24"/> 
                        <RowDefinition Height="24"/> 
                        <RowDefinition Height="24"/> 
                        <RowDefinition Height="24"/> 
                        <RowDefinition Height="24"/> 
                        <RowDefinition Height="24"/> 
                        <RowDefinition Height="24"/> 
                        <RowDefinition Height="24"/> 
                        <RowDefinition Height="24"/> 
                        <RowDefinition Height="24"/> 
                        <RowDefinition Height="24"/> 
                        <RowDefinition Height="24"/> 
                        <RowDefinition Height="8"/>  
                        <RowDefinition Height="Auto"/> 
                        <RowDefinition Height="Auto"/> 
                    </Grid.RowDefinitions>

                    <Image Grid.Row="1" Grid.RowSpan="3" 
                           Source="/Assets/amd_logo.png" 
                           Stretch="Uniform" 
                           Width="85"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"
                           Margin="0,2,0,0"/> 
                           
                    <Grid Grid.Row="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="Label" Text="Name"/>
                            <TextBox Text="{Binding DeviceName}" Width="200"/>
                        </StackPanel>
                        <Button Content="Lookup"
                                Classes="HeaderBtn" 
                                FontSize="11" 
                                Height="20" 
                                Width="85" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Padding="0"
                                Margin="0"
                                Command="{Binding LookupWebCommand}"/>
                    </Grid>

                    <Grid Grid.Row="1" Margin="0,0,90,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="Label" Text="GPU"/>
                            <TextBox Text="{Binding GpuCodeName}" Width="88"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Classes="InnerLabel" Text="Revision"/>
                            <TextBox Text="{Binding Revision}" Width="59"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="2" Margin="0,0,90,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="Label" Text="Technology"/>
                            <TextBox Text="{Binding Technology}" Width="77"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Classes="InnerLabel" Text="Die Size"/>
                            <TextBox Text="{Binding DieSize}" Width="59"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="3" Margin="0,0,90,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="Label" Text="Release Date"/>
                            <TextBox Text="{Binding ReleaseDate}" Width="77"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Classes="InnerLabel" Text="Transistors"/>
                            <TextBox Text="{Binding Transistors}" Width="59"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="Label" Text="BIOS Version"/>
                            <TextBox Text="{Binding BiosVersion}" Width="200"/>
                            
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="6,0,0,0" IsHitTestVisible="False">
                                <CheckBox IsChecked="{Binding IsUefiEnabled}" Classes="GpuZ"/>
                                <TextBlock Text="UEFI" Classes="CheckText"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="Label" Text="Subvendor"/>
                            <TextBox Text="{Binding Subvendor}" Width="97"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Classes="InnerLabel" Text="Device ID"/>
                            <TextBox Text="{Binding DeviceId}" Width="125"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="6">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="Label" Text="ROPs/TMUs"/>
                            <TextBox Text="{Binding RopsTmus}" Width="68"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Classes="InnerLabel" Text="Bus Interface"/>
                            <TextBox Text="{Binding BusInterface}" Width="140"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="7">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="Label" Text="Shaders"/>
                            <TextBox Text="{Binding Shaders}" Width="110"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Classes="InnerLabel" Text="Compute Units"/>
                            <TextBox Text="{Binding ComputeUnits}" Width="85"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="Label" Text="Pixel Fillrate"/>
                            <TextBox Text="{Binding PixelFillrate}" Width="91"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Classes="InnerLabel" Text="Texture Fillrate"/>
                            <TextBox Text="{Binding TextureFillrate}" Width="103"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="9">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="Label" Text="Memory Type"/>
                            <TextBox Text="{Binding MemoryType}" Width="124"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Classes="InnerLabel" Text="Bus Width"/>
                            <TextBox Text="{Binding BusWidth}" Width="85"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="Label" Text="Memory Size"/>
                            <TextBox Text="{Binding MemorySize}" Width="94"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Classes="InnerLabel" Text="Bandwidth"/>
                            <TextBox Text="{Binding Bandwidth}" Width="104"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="11">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="Label" Text="Driver Version"/>
                            <TextBox Text="{Binding DriverVersion}" Width="295"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="Label" Text="Driver Date"/>
                            <TextBox Text="{Binding DriverDate}" Width="101"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Classes="InnerLabel" Text="Vulkan API"/>
                            <TextBox Text="{Binding VulkanApi}" Width="91"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="13">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="Label" Text="GPU Clock"/>
                            <TextBox Text="{Binding GpuClock}" Width="61"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Classes="InnerLabel" Text="Memory"/>
                            <TextBox Text="{Binding MemoryClock}" Width="61"/>
                            <TextBlock Classes="InnerLabel" Text="Boost"/>
                            <TextBox Text="{Binding BoostClock}" Width="61"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="14">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="Label" Text="Default Clock"/>
                            <TextBox Text="{Binding DefaultGpuClock}" Width="61"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Classes="InnerLabel" Text="Memory"/>
                            <TextBox Text="{Binding DefaultMemoryClock}" Width="61"/>
                            <TextBlock Classes="InnerLabel" Text="Boost"/>
                            <TextBox Text="{Binding DefaultBoostClock}" Width="61"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="15">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="Label" Text="Bus ID"/>
                            <TextBox Text="{Binding BusId}" Width="118"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Classes="InnerLabel" Text="Resizable BAR"/>
                            <TextBox Text="{Binding ResizableBar}" Width="83"/>
                        </StackPanel>
                    </Grid>

                    <Border Grid.Row="16" Height="0" Background="#A0A0A0" Margin="0,3,0,2" VerticalAlignment="Center"/>

                    <Grid Grid.Row="17" Margin="0,4" IsHitTestVisible="False">
                        <StackPanel Orientation="Horizontal">
                             <TextBlock Classes="Label" Text="Computing"/>
                             
                             <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                 <CheckBox IsChecked="{Binding IsOpenClEnabled}" Classes="GpuZ"/>
                                 <TextBlock Text="OpenCL" Classes="CheckText"/>

                                 <CheckBox IsChecked="{Binding IsCudaEnabled}" IsEnabled="False" Classes="GpuZ"/>
                                 <TextBlock Text="CUDA" Classes="CheckText" Opacity="0.5"/>
                                 
                                 <CheckBox IsChecked="{Binding IsRocmEnabled}" Classes="GpuZ"/>
                                 <TextBlock Text="ROCm" Classes="CheckText"/>
                                 
                                 <CheckBox IsChecked="{Binding IsHsaEnabled}" Classes="GpuZ"/>
                                 <TextBlock Text="HIP" Classes="CheckText"/>
                             </StackPanel>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="18" Margin="0,4" IsHitTestVisible="False">
                         <StackPanel Orientation="Horizontal">
                             <TextBlock Classes="Label" Text="Technologies"/>
                             
                             <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                 <CheckBox IsChecked="{Binding IsVulkanEnabled}" Classes="GpuZ"/>
                                 <TextBlock Text="Vulkan" Classes="CheckText"/>

                                 <CheckBox IsChecked="{Binding IsRayTracingEnabled}" Classes="GpuZ"/>
                                 <TextBlock Text="Ray Tracing" Classes="CheckText"/>
                                 
                                 <CheckBox IsChecked="{Binding IsPhysXEnabled}" IsEnabled="False" Classes="GpuZ"/>
                                 <TextBlock Text="PhysX" Classes="CheckText" Opacity="0.5"/>
                                 
                                 <CheckBox IsChecked="{Binding IsOpenglEnabled}" Classes="GpuZ"/>
                                 <TextBlock Text="OpenGL 4.6" Classes="CheckText"/>
                             </StackPanel>
                        </StackPanel>
                    </Grid>

                </Grid>
            </TabItem>
            
            <TabItem Header="Sensors">
        <Grid RowDefinitions="*,Auto">
            
            <ScrollViewer Grid.Row="0" 
                          HorizontalScrollBarVisibility="Disabled" 
                          VerticalScrollBarVisibility="Auto">
                
                <ItemsControl ItemsSource="{Binding Sensors}" Margin="6,10,6,0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,0,0,7"> 
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="148"/> 
                                    <ColumnDefinition Width="5"/>   
                                    <ColumnDefinition Width="70"/>  
                                    <ColumnDefinition Width="5"/>   
                                    <ColumnDefinition Width="133"/> 
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Classes="SensorFrame" Height="20">
                                    <Border Classes="SensorFrameInner">
                                        <TextBlock Text="{Binding Name}" Classes="SensorName"/>
                                    </Border>
                                </Border>

                                <Button Grid.Column="2" 
                                        Command="{Binding ToggleModeCommand}"
                                        Padding="0" BorderThickness="0" Background="Transparent"
                                        CornerRadius="0" Height="20">
                                    <Border Classes="SensorFrame" Height="20" Width="70">
                                        <Border Classes="SensorFrameInner">
                                            <Grid>
                                                <TextBlock Text="{Binding ModeLabel}" 
                                                           Classes="ModeLabel"/>
                                                
                                                <TextBlock Text="{Binding DisplayValue}" 
                                                           Classes="SensorValue"/>
                                            </Grid>
                                        </Border>
                                    </Border>
                                </Button>

                                <Grid Grid.Column="4" 
                                      Height="20" 
                                      Width="133"
                                      Background="Transparent"
                                      PointerMoved="Graph_PointerMoved"
                                      PointerExited="Graph_PointerExited">
                                    
                                    <Border Background="#f1f1f1" ClipToBounds="True" Margin="1">
                                        <Polygon Points="{Binding GraphPoints}"
                                                 Fill="#FF0000"
                                                 Stroke="#FF0000"
                                                 StrokeThickness="1"
                                                 IsHitTestVisible="False"
                                                 VerticalAlignment="Top"
                                                 HorizontalAlignment="Left"
                                                 RenderOptions.BitmapInterpolationMode="LowQuality"/>
                                    </Border>

                                    <Border Classes="SensorFrame" 
                                            Background="Transparent" 
                                            IsHitTestVisible="False">
                                        <Border Classes="SensorFrameInner" Background="Transparent"/>
                                    </Border>
                                    
                                </Grid>

                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <Grid Grid.Row="1" Margin="6,9,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <CheckBox Content="Log to file" 
                              Classes="GpuZ"
                              IsChecked="{Binding IsLogEnabled, Mode=OneWay}"
                              Checked="LogCheckBox_Checked"
                              Unchecked="LogCheckBox_Unchecked"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                        Content="Reset" 
                        Width="75" 
                        Height="22"
                        FontSize="11"
                        Classes="ResetBtn"
                        Command="{Binding ResetSensorsCommand}"/>
            </Grid>
        </Grid>
    </TabItem>
            
             <TabItem Header="Advanced">
    <Grid RowDefinitions="Auto, *">
        
        <ComboBox Grid.Row="0" 
                  ItemsSource="{Binding AdvancedCategories}"
                  SelectedItem="{Binding SelectedAdvancedCategory}"
                  Width="365" 
                  Margin="6,10,6,5"/>

        <Border Grid.Row="1" 
                BorderBrush="#A0A0A0" 
                BorderThickness="1" 
                Margin="6,0,6,10">
            
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding AdvancedItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Background="{Binding Background}">
                                
                                <Border IsVisible="{Binding IsHeader}"
                                        Height="28"
                                        BorderBrush="#A0A0A0"
                                        BorderThickness="0,0,0,1">
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="Bold" 
                                               Foreground="#000000"
                                               VerticalAlignment="Bottom"
                                               Margin="4,0,0,3"/> 
                                </Border>

                                <Grid ColumnDefinitions="*, *" 
                                      IsVisible="{Binding !IsHeader}"
                                      Height="18">
                                    
                                    <Border BorderBrush="#E0E0E0" BorderThickness="0,0,1,1">
                                        <TextBlock Text="{Binding Name}" 
                                                   Foreground="Black"
                                                   VerticalAlignment="Center"
                                                   Margin="4,0,0,0"
                                                   FontSize="11"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </Border>
                                    
                                    <Border Grid.Column="1" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                                        <TextBlock Text="{Binding Value}" 
                                                   Foreground="Black"
                                                   VerticalAlignment="Center"
                                                   Margin="4,0,0,0"
                                                   FontSize="11"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </Border>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</TabItem>
        </TabControl>

        <Grid Grid.Row="1" Margin="10,0,10,0"> <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <RowDefinition Height="8"/>    </Grid.RowDefinitions>

            <ComboBox Grid.Row="0" Grid.Column="0" 
                      Width="270" 
                      ItemsSource="{Binding AvailableGpus}"
                      SelectedItem="{Binding SelectedGpu}"
                      HorizontalAlignment="Left"
                      Margin="0,0,0,1"/> <Button Grid.Row="0" Grid.Column="1" 
                    Content="Close" 
                    Width="75" 
                    HorizontalContentAlignment="Center"
                    Command="{Binding CloseAppCommand}"
                    Margin="0,0,0,1"/>

            <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                    Background="Transparent"
                    Height="8"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Stretch"
                    Cursor="SizeNorthSouth"
                    IsVisible="{Binding ShowResizeGrip}"
                    PointerPressed="ResizeBar_PointerPressed"
                    PointerMoved="ResizeBar_PointerMoved"
                    PointerReleased="ResizeBar_PointerReleased"/>
        </Grid>

    </Grid>
</Window>